mixin projectSlide(itemClasses, itemStyle)
	.swiper-slide(class=itemClasses)
		+e.item(style=itemStyle href='#')
			+e.content
				+e.title
					block
				+e.img
					img.swiper-lazy(src="#" data-src="img/@2x/partners-img.png" alt="")

