mixin projectSlide(itemClasses, itemStyle, i)
	.swiper-slide(class=itemClasses)
		+e.item(style=itemStyle )
			+e.content
				+e.title
					block
				+e.PICTURE.img
					source.swiper-lazy( type="image/webp" srcset="#" data-srcset=`img/@2x/webp/projects-${i}.webp` )
					img.swiper-lazy(src="#" data-src=`img/@2x/projects-${i}.jpg` alt="")

