mixin sDirection(data)
	// start sDirection
	+b.SECTION.sDirection.section#sDirection&attributes(attributes)
		.container
			+b.section-title.row.align-items-center
				.col-12.col-lg-auto
					+b.sl-contr
						+e.prev.direction-prev-js
							img(loading="lazy" src="img/svg/arrow-left.svg" alt="")
						+e.next.direction-next-js
							img(loading="lazy" src="img/svg/arrow-right.svg" alt="")
				.col-12.col-lg.mb-3.mb-lg-0
					h2 Направления фестиваля
			+e.slider
				.swiper-container.direction-slider-js
					.swiper-wrapper
						+directionSlide()
						+directionSlide()
						+directionSlide()
	// end sDirection

mixin sDirection2(data)
	// start sDirection
	+b.SECTION.sDirection--on-white.section#sDirection&attributes(attributes)
		.container
			+b.section-title.row.align-items-center
				.col-12.col-lg-auto
					+b.sl-contr
						+e.prev.direction-prev-js
							img(loading="lazy" src="img/svg/arrow-left.svg" alt="")
						+e.next.direction-next-js
							img(loading="lazy" src="img/svg/arrow-right.svg" alt="")
				.col-12.col-lg.mb-3.mb-lg-0
					h2 Творческие антишколы форума
			+e.slider
				.swiper-container.direction-slider-js
