mixin newsItem(itemClass, imgNum)
	.grid-item
		+newsItemOrigin(itemClass, imgNum)

mixin newsItemOrigin(itemClass, imgNum)
	+e.item(href="#" class=itemClass)
		+e.content
			if imgNum
				+e.img
					img( alt="" src=`img/@2x/news-${imgNum}.jpg`)
			+e.txt
				block
		+e.date 14 января 2020

mixin sNewsSlider()
	+b.SECTION.sNews--slider.section#sNews&attributes(attributes)
		.container
			+e.title-row.row.gy-4.align-items-center
				.col-12.col-lg
					h2 Новости
				.col-12.col-lg-auto
					+b.sl-contr
						+e.prev.sNews-prev-js
							img(loading="lazy" src="img/svg/arrow-left.svg" alt="")
						+e.next.sNews-next-js
							img(loading="lazy" src="img/svg/arrow-right.svg" alt="")
			+e.slider-wrap
				.swiper-container.sNews-slider-js
					.swiper-wrapper
						-for(var i = 0; i < 5; i++)
