mixin sWay(data)
	// start sWay
	+b.SECTION.sWay.section#sWay&attributes(attributes)
		.container
			+b.section-title
				h2 Форматы участия в фестивале
			+e.row.row
				+wayItem(1,'Участник', 'color: #fff; text-align: right')(style="background-color:#6B1680")
					+e.txt--white
						+e.long Участники фестиваля – это молодые деятели культуры и искусства, представители волонтерских движений, общественных организаций, проектов платформы «Россия – страна возможностей», медиаинфлюенсеры в возрасте от 18 до 35 лет, а также участники проекта «Большая перемена» с детьми в возрасте от 14 до 17 лет, прошедшие конкурсный отбор.
						+e.sm-title Регистрация
						+e.sm-content
							span
								| до
								|
							strong 1 августа 2020 года
						+e.sm-title Результаты отбора
						+e.sm-content
							span
								| после
								|
							strong 23 августа 2020 года
					+e.btn(href='#') Подробнее
				+wayItem(2,'Зрители', 'color: #0A1124;')(style="background-color:#ffc107")
					+e.bold Любой желающий в возрасте от 18 лет включительно, прошедший регистрацию и получивший подтверждение в личном кабинете
					+e.btn(href='#') Подробнее
			+e.pills
				+wayPill(1)
					| Резиденты «Тавриды» (те, кто был на мероприятиях арт-кластера не менее 2 раз), участники проектов арт-кластера «Таврида», участники Национального открытого чемпионата в сфере творческих компетенций ArtMasters
				+wayPill(2)
					| Блогеры, инфлюенсеры молодежных пабликов и аккаунтов в социальных сетях, представители студенческих СМИ
				+wayPill(3)
					| Полуфиналисты и финалисты проектов платформы «Россия – страна возможностей»: «Лидеры России», «Мастера гостеприимства», «Культурный код», «ТопБЛОГ», «Цифровой прорыв» и т.д.
				+wayPill(4)
					| Волонтеры движения МыВместе, представители НКО, актив
					br.d-none.d-lg-block
					| общественных организаций
				+wayPill(5)
					| Семьи с детьми – участниками проекта «Большая перемена»
	// end sWay

mixin wayPill(imgNum)
	+e.pill
		+e.p-row.row
			.col-auto
				+e.p-img
					img(loading="lazy" src=`img/svg/way-svg-${imgNum}.svg` alt="")
			+e.p-coll--txt.col
				+e.p-bold
					block
				+e.age Возраст от 18 до 35 лет включительно
mixin wayItem(imgNum,txt, txtStyle)
	.col-12.col-lg-6
		+e.item&attributes(attributes)
			img(loading="lazy" src=`img/@2x/sWay-${imgNum}.jpg` alt="")
			+e.big-txt(style=txtStyle)=txt
			block