mixin sActForm(h2="Аудитория форума")
	// start sActForm
	+b.SECTION.sActForm.section#sActForm&attributes(attributes)
		.container
			+b.section-title.row.align-items-center
				.col-12.col-lg.mb-3.mb-lg-0.order-lg-2
					h2!= h2
				.col-12.col-lg-auto
					+b.sl-contr
						+e.prev.act-prev-js
							img(loading="lazy" src="img/svg/arrow-left.svg" alt="")
						+e.next.act-next-js
							img(loading="lazy" src="img/svg/arrow-right.svg" alt="")
			+e.slider
				.swiper-container.act-slider-js
					.swiper-wrapper
						+sActSlide(1, 'Актеры')
						+sActSlide(2, 'Художники')
						+sActSlide(3, 'Режисеры')
						+sActSlide(4, 'фотографы')
	// end sActForm

mixin sActSlide(imgNum, name, slideColor='#00BAC3')
	.swiper-slide
		+e.item
			+e.bg(style=`--color-bg: ${slideColor}`)
				img(loading="lazy" src=`img/@2x/act-slide-${imgNum}.jpg` alt="")
			+e.txt
				if block
					block
				else
					| Представители театара
					|
					br
					| и кино с разлиными
					|
					br
					| регалиями
					|
					br
					| и послужным списком
			+e.name=name
		//-act-slide-