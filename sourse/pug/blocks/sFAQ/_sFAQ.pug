mixin sFAQBody(h2="Часто задаваемые вопросы")
	// start sFAQ
	+b.SECTION.sFAQ.section#sFAQ&attributes(attributes)
		.container
			+b.section-title
				h2!= h2
			+e.items.faq-items-js
				block
	// end sFAQ
	
mixin sFAQBody2(h2="Часто задаваемые вопросы", h3)
	// start sFAQ
	+b.SECTION.sFAQ.section#sFAQ&attributes(attributes)
		.container
			+b.section-title
				h2!= h2
				if h3
					p!= h3
			block
	// end sFAQ

mixin sFAQ(data)
