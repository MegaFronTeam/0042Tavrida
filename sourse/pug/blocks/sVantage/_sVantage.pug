	// end sVantage

mixin vantageItem(imgNum, imgClass="")
	+e.col.col-12.col-sm-6.col-lg-3
		+e.img(class=imgClass)
			img(loading="lazy" src=`img/svg/vantage-${imgNum}.svg` alt="")
		+e.txt.text-center
			block

