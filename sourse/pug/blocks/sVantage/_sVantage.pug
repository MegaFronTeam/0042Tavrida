mixin sVantageBase(title, ...datas)
  +sVantageBody(title)
    each item in datas
      +vantageItem(item.img, item.imgClass, item.col)
        != item.text

mixin vantageItem(imgNum, imgClass="", col="col-lg-3")
  +e.col.col-12.col-sm-6(class= col)
    +e.img(class=imgClass)
      img(loading="lazy" src=`img/svg/vantage-${imgNum}.svg` alt="")
    +e.txt.text-center
      block


